{
  "name": "microrouter",
  "description": "ðŸš‰ A tiny and functional router for ZEIT's Micro",
  "version": "3.1.3",
  "main": "dist/lib/index.js",
  "jsnext:main": "src/lib/index.js",
  "scripts": {
    "prerelease": "yarn test && yarn lint && yarn build",
    "release": "np",
    "lint": "eslint ./src/**/*.js",
    "build": "yarn lint && rm -rf dist/* && babel src --ignore *.test.js --out-dir dist --copy-files",
    "test": "nyc ava",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "format": "yarn lint && prettier --write \"src/**/*.js\""
  },
  "repository": "git@github.com:pedronauck/micro-router.git",
  "author": "Pedro Nauck <pedronauck@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "url-pattern": "^1.0.3"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.15.0-rc.8",
    "lint-staged": "^7.0.0",
    "micro": "^9.1.0",
    "np": "^2.20.1",
    "nyc": "^11.4.1",
    "prettier": "^1.11.1",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "test-listen": "^1.1.0"
  },
  "engines": {
    "node": ">=6.10.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn format",
      "git add"
    ]
  },
  "husky": {
    "pre-commit": "lint-staged && npm test"
  }
}
